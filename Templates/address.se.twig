{% extends 'address.gb.twig#' ~ format %}

{# NB. this is a copy of address.eu.twig as there has been a problem with including/extending other templates with the internal twig engine that we need to resolve to move on #}
{% block spec %}
{% address %}
{% if not omit_recipient and address.recipient|length > 0 %}{% recipient %}{{ address.recipient }}{% endrecipient %}{% break %}{% endif %}
{% streetlines %}
{% for streetline in address.streetaddresslines %}
{% streetline %}{{ streetline }}{% endstreetline %}{% break %}
{% endfor %}
{% endstreetlines %}
{% postalcode %}{{ address.postalcode }}{% endpostalcode %}{% space %}{% space %}{% locality %}{{ address.locality|upper }}{% endlocality %}{% if not omit_country %}{% break %}
{% country %}{{ country_name(address.country) }}{% endcountry %}{% endif %}
{% endaddress %}
{% endblock spec %}
