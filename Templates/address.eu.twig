{% block spec %}
{% address %}
{% if not omit_recipient and address.recipient|length > 0 %}{% recipient %}{{ address.recipient }}{% endrecipient %}{% break %}{% endif %}
{% streetlines %}
{% for streetline in address.streetaddresslines %}
{% streetline %}{{ streetline }}{% endstreetline %}{% break %}
{% endfor %}
{% endstreetlines %}
{% postalcode %}{{ address.postalcode }}{% endpostalcode %}{% space %}{% locality %}{{ address.locality|upper }}{% endlocality %}{% if not omit_country %}{% break %}
{% country %}{{ country_name(address.country, locale) }}{% endcountry %}{% endif %}
{% endaddress %}
{% endblock spec %}
