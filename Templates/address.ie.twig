{% block spec %}
{% address %}
{% if not omit_recipient and address.recipient|length > 0 %}{% recipient %}{{ address.recipient }}{% endrecipient %}{% break %}{% endif %}
{% streetlines %}
{% for streetline in address.streetaddresslines %}
{% streetline %}{{ streetline }}{% endstreetline %}{% break %}
{% endfor %}
{% endstreetlines %}
{% locality %}{{ address.locality }}{% endlocality %}{% if address.postalcode|length > 0 %} {% postalcode %}{{ address.postalcode }}{% endpostalcode %}{% endif %}{% break %}
{% if address.region|length > 0 %}{% region %}{{ address.region }}{% endregion %}{% endif %}{% if not omit_country %}{% if address.region|length > 0 %}{% break %}{% endif %}
{% country %}{{ country_name(address.country) }}{% endcountry %}{% endif %}
{% endaddress %}
{% endblock spec %}
